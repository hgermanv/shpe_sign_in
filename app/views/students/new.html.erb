<div class="container-fluid">
<%= form_with model: @student, local: true do |form| %>
  <div class="form-group">
    <%= form.label :email, "Email address" %>
    <%= form.email_field :email, class: "form-control", placeholder: "jjohn153@u.rochester.edu" %>
  </div>
  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Jordan Johnson" %>
  </div>
  <div class="form-group">
    <%= form.label :year, "Year" %>
    <%= form.text_field :year, class: "form-control", placeholder: "2025", minlength: 4, maxlength: 4 %>
  </div>
  <div class="form-group">
    <%= form.label :major, "Major" %>
    <%= form.text_field :major, class: "form-control", placeholder: "Computer Science" %>
  </div>
  <%= form.submit "Submit", class: "btn btn-outline-secondary" %>
<% end %>
</div>